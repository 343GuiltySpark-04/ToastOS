diff --git a/config.sub b/config.sub
index 275b2ff49ba..b8a28e75d03 100755
--- a/config.sub
+++ b/config.sub
@@ -132,7 +132,7 @@ case $1 in
 		maybe_os=$field2-$field3
 		case $maybe_os in
 			nto-qnx* | linux-* | uclinux-uclibc* \
-			| uclinux-gnu* | kfreebsd*-gnu* | knetbsd*-gnu* | netbsd*-gnu* \
+			| uclinux-gnu* | kfreebsd*-gnu* | knetbsd*-gnu* | netbsd*-gnu* | toast-system* \
 			| netbsd*-eabi* | kopensolaris*-gnu* | cloudabi*-eabi* \
 			| storm-chaos* | os2-emx* | rtmk-nova*)
 				basic_machine=$field1
@@ -1313,6 +1313,10 @@ EOF
 		kernel=linux
 		os=$(echo $basic_os | sed -e 's|linux|gnu|')
 		;;
+	toast*)
+		kernel=toast
+		os=$(echo $basic_os | sed -e 's|toast|system|')
+		;;
 	*)
 		kernel=
 		os=$basic_os
@@ -1762,6 +1766,8 @@ case $kernel-$os in
 		;;
 	*-eabi* | *-gnueabi*)
 		;;
+	toast-system*)
+		;;
 	-*)
 		# Blank kernel with real OS is always fine.
 		;;
diff --git a/gcc/config.gcc b/gcc/config.gcc
index 7608b7a219e..7845297fdb2 100644
--- a/gcc/config.gcc
+++ b/gcc/config.gcc
@@ -941,10 +941,21 @@ case ${target} in
   use_gcc_stdint=wrap
   ;;
 *-*-toast*)
+  extra-options="$extra_options gnu-user.opt"
   gas=yes
   gnu_ld=yes
   default_use_cxa_atexit=yes
   use_gcc_stdint=wrap
+  
+  case ${target} in
+  *-toast-system*)
+	tmake_file="${tmake_file} t-slibgcc"
+	thread_file='posix'
+	;;
+	*)
+	echo "toast target '{target}' not supported."
+	exit 1
+  esac
   ;;
 *-*-uclinux*)
   extra_options="$extra_options gnu-user.opt"
@@ -1929,11 +1940,19 @@ i[34567]86-*-freebsd*)
 x86_64-*-freebsd*)
 	tm_file="${tm_file} i386/unix.h i386/att.h dbxelf.h elfos.h ${fbsd_tm_file} i386/x86-64.h i386/freebsd.h i386/freebsd64.h"
 	;;
-i[34567]86-*-toast*)
-    tm_file="${tm_file} i386/unix.h i386/att.h dbxelf.h elfos.h glibc-stdint.h i386/i386elf.h toast.h"
-    ;;
 x86_64-*-toast*)
-    tm_file="${tm_file} i386/unix.h i386/att.h dbxelf.h elfos.h glibc-stdint.h i386/i386elf.h i386/x86-64.h toast.h"
+    tm_file="${tm_file} i386/unix.h i386/att.h dbxelf.h elfos.h gnu-user.h glibc-stdint.h i386/x86-64.h i386/gnu-user-common.h i386/gnu-user64.h toast.h i386/i386-toast.h"
+	
+	case ${target} in
+	*-toast-system*)
+		tm_file="${tm_file} toast-system.h"
+		;;
+	*)
+		echo "toast target '{target}' not supported."
+		exit 1
+	esac
+	
+	tmake_file="${tmake_file} i386/t-toast64"
     ;;
 i[34567]86-*-netbsdelf*)
 	tm_file="${tm_file} i386/unix.h i386/att.h dbxelf.h elfos.h ${nbsd_tm_file} i386/netbsd-elf.h"
