From d2d6aea1f954de364cb4253d32520bfb83fb4247 Mon Sep 17 00:00:00 2001
From: Nuno Silva <little.coding.fox@gmail.com>
Date: Sun, 3 Oct 2021 22:06:16 +0100
Subject: [PATCH] ToastOS Changes

---
 bfd/config.bfd              | 12 ++++++++++++
 config.sub                  |  2 +-
 gas/configure.tgt           |  2 ++
 ld/configure.tgt            |  9 +++++++++
 ld/emulparams/elf_x86_64.sh |  2 +-
 5 files changed, 25 insertions(+), 2 deletions(-)

diff --git a/bfd/config.bfd b/bfd/config.bfd
index 30087e3b8f8..b7ad5540551 100644
--- a/bfd/config.bfd
+++ b/bfd/config.bfd
@@ -694,6 +694,18 @@ case "${targ}" in
     targ_selvecs=i386_elf32_vec
     want64=true
     ;;
+#endif
+  i[3-7]86-*-toast*)
+    targ_defvec=i386_elf32_vec
+    targ_selvecs=
+    targ64_selvecs=x86_64_elf64_vec
+    ;;
+#ifdef BFD64
+  x86_64-*-toast*)
+    targ_defvec=x86_64_elf64_vec
+    targ_selvecs=i386_elf32_vec
+    want64=true
+    ;;
 #endif
   i[3-7]86-*-lynxos*)
     targ_defvec=i386_elf32_vec
diff --git a/config.sub b/config.sub
index 7384e9198b4..ea1b10fa160 100755
--- a/config.sub
+++ b/config.sub
@@ -1704,7 +1704,7 @@ case $os in
 	     | hpux* | unos* | osf* | luna* | dgux* | auroraux* | solaris* \
 	     | sym* |  plan9* | psp* | sim* | xray* | os68k* | v88r* \
 	     | hiux* | abug | nacl* | netware* | windows* \
-	     | os9* | macos* | osx* | ios* \
+	     | os9* | macos* | osx* | ios* | toast* \
 	     | mpw* | magic* | mmixware* | mon960* | lnews* \
 	     | amigaos* | amigados* | msdos* | newsos* | unicos* | aof* \
 	     | aos* | aros* | cloudabi* | sortix* | twizzler* \
diff --git a/gas/configure.tgt b/gas/configure.tgt
index 338892add2a..3e2b926995e 100644
--- a/gas/configure.tgt
+++ b/gas/configure.tgt
@@ -259,6 +259,8 @@ case ${generic_target} in
   i386-*-*nt*)				fmt=coff em=pe ;;
   i386-*-rdos*)				fmt=elf ;;
   i386-*-darwin*)			fmt=macho ;;
+  
+  i386-*-toast*)    fmt=elf ;;
 
   ia16-*-elf*)				fmt=elf ;;
 
diff --git a/ld/configure.tgt b/ld/configure.tgt
index 6205d7c9872..e2a533701f0 100644
--- a/ld/configure.tgt
+++ b/ld/configure.tgt
@@ -340,6 +340,15 @@ i[3-7]86-*-solaris*)	targ_emul=elf_i386_ldso
 			targ_extra_emuls="elf_i386"
 			targ_extra_libpath=$targ_extra_emuls
 			;;
+i[3-7]86-*-toast*)
+			targ_emul=elf_i386
+			targ_extra_emuls=elf_i386
+			targ64_extra_emuls="elf_x86_64"
+			;;
+x86_64-*-toast*)
+			targ_emul=elf_x86_64
+			targ_extra_emuls="elf_x86_64 elf_i386"
+			;;
 i[3-7]86-*-netbsdelf* | \
 i[3-7]86-*-netbsd*-gnu* | \
 i[3-7]86-*-knetbsd*-gnu | \
diff --git a/ld/emulparams/elf_x86_64.sh b/ld/emulparams/elf_x86_64.sh
index 48d0974711b..77dc7be5923 100644
--- a/ld/emulparams/elf_x86_64.sh
+++ b/ld/emulparams/elf_x86_64.sh
@@ -42,7 +42,7 @@ fi
 # Linux/Solaris modify the default library search path to first include
 # a 64-bit specific directory.
 case "$target" in
-  x86_64*-linux*|i[3-7]86-*-linux-*)
+  x86_64*-linux*|i[3-7]86-*-linux-*|i[3-7]86*-toast*|x86_64*-toast*)
     case "$EMULATION_NAME" in
       *64*)
 	LIBPATH_SUFFIX=64
-- 
